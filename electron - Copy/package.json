{
  "name": "moreyou.contracts",
  "version": "1.0.0",
  "description": "moreyou.contracts app",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "electron ./",
    "electron:pack": "electron-builder build --dir",
    "electron:build-windows": "electron-builder build --windows",
    "electron:build-mac": "electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1"
  },
  "devDependencies": {
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "fino data services",
  "license": "MIT",
  "build": {
    "appId": "com.moreyoucontracts.com",
    "productName": "moreyou.contracts",
	"copyright":"Copyright Â© 2021 ${author}",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/appIcon.ico",
	  "executableName":"moreyou.contracts",
	  "legalTrademarks":"fino data services GmbH",
	  "publisherName":"fino data services GmbH"
    }
  }
}