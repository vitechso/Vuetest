{
  "name": "Moreyouletter",
  "version": "1.0.0",
  "description": "Easy letter writing and sending",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "electron ./",
    "electron:pack": "electron-builder build --dir",
    "electron:build-windows": "electron-builder build --windows",
    "electron:build-mac": "electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1"
  },
  "devDependencies": {
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.moreyouletter.com",
    "productName": "Moreyouletter",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "appIcon.ico",
	  "executableName":"Moreyouletter",
	  "legalTrademarks":"Fino Data Service GmbH",
	  "publisherName":"Fino Data Service GmbH"
    }
  }
}
